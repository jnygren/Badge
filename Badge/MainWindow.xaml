<Window x:Class="Badge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Earn Your Badge" Height="600" Width="800" Loaded="Window_Loaded">
    <DockPanel LastChildFill="True">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem x:Name="menuFileExit" Header="Exit" />
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem x:Name="menuHelpHelp" Header="Badge Help" ToolTip="View Help for 'Earn Your Badge." />
                <MenuItem x:Name="menuHelpAbout" Header="About Badge" ToolTip="My Notes." />
            </MenuItem>
        </Menu>
        
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem x:Name="statusPanel1" Content="Ready" />
        </StatusBar>
        
        <Grid>
            <Button Content="Go" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Width="75" Click="ButtonGo_Click" />
        </Grid>
    </DockPanel>
</Window>
